clear;
f = imread('Fig0445(a)(characters_test_pattern).tif');
% imshow(f);
f1 = imnoise(f,'gaussian');
F1 = log(abs(fftshift(fft2(f1))));
f2 = imnoise(f,'gaussian',0,0.05);
F2 = log(abs(fftshift(fft2(f2))));
f3 = imnoise(f,'gaussian',0.5,0.01);
F3 = log(abs(fftshift(fft2(f3))));
subplot(241),imshow(f),title('原图');
subplot(242),imshow(f1,[]),title('添加均值为0,方差为0.01的高斯噪声的图片');
subplot(246),imshow(F1,[]),title('添加均值为0,方差为0.01的高斯噪声的图片');
subplot(243),imshow(f2,[]),title('添加均值为0,方差为0.05的高斯噪声的图片');
subplot(247),imshow(F2,[]),title('添加均值为0,方差为0.05的高斯噪声的图片');
subplot(244),imshow(f3,[]),title('添加均值为0.5,方差为0.01的高斯噪声的图片');
subplot(248),imshow(F3,[]),title('添加均值为0.5,方差为0.01的高斯噪声的图片');